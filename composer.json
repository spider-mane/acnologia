{
  "name": "webtheory/acnologia",
  "description": "Lightweight WordPress application development framework",
  "homepage": "https://github.com/spider-mane/acnologia",
  "license": "MIT",
  "type": "project",

  "keywords": [
    "webtheory",
    "acnologia"
  ],

  "authors": [{
    "name": "Chris Williams",
    "email": "spider.mane.web@gmail.com",
    "homepage": "https://github.com/spider-mane",
    "role": "Developer"
  }],

  "require": {
    "php": ">=7.2",
    "commerceguys/addressing": "^1.0",
    "dragonmantank/cron-expression": "^2.2",
    "frontpack/composer-assets-plugin": "^0.9.4",
    "geocoder-php/google-maps-provider": "^4.4",
    "guzzlehttp/guzzle": "^6.3",
    "league/flysystem": "^1.0",
    "php-http/guzzle6-adapter": "^2.0",
    "predis/predis": "^1.1",
    "ramsey/uuid": "^3.8",
    "roots/wordpress": "^5.3",
    "roots/wp-password-bcrypt": "1.0.0",
    "sentry/sdk": "^2.0",
    "swiftmailer/swiftmailer": "^6.2",
    "webtheory/guctilitybelt": "^0.2",
    "webtheory/html": "^0.1",
    "webtheory/leonidas": "^0.8.3",
    "webtheory/saveyour": "^0.1",
    "webtheory/wp-library": "^0.7.1",
    "webtheory/zeref": "^0.1.2"
  },

  "require-dev": {
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.15",
    "laravel/homestead": "^9.0",
    "phpbench/phpbench": "@dev",
    "phpunit/phpunit": "^8.2",
    "psy/psysh": "^0.9.9",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/var-dumper": "^4.3"
  },

  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "check-style": "vendor/bin/phpcs src tests",
    "fix-style": "vendor/bin/phpcbf src tests",
    "benchmark": "vendor/bin/phpbench",
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.sample', '.env');\""
    ]
  },

  "extra": {
    "installer-paths": {
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/wp"
  },

  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "process-timeout": 0
  }
}